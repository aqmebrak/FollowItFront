<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/arrival_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="polytech.followit.SelectArrivalActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/arrival_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmation"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/arrival_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Choisissez votre lieu d'arrivÃ©e"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:paddingBottom="16dp"
                android:paddingTop="8dp" />

            <ListView
                android:id="@+id/poi_list_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrival_title" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/arrival_card_view">


        <Button
            android:id="@+id/get_path_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/get_path_button_bg"
            android:text="Go !"
            android:textColor="@color/navigationTextColor"
            android:elevation="0dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/go_back_button"
        android:text="Retour"
        android:textColor="@color/navigationTextColor"
        android:layout_below="@+id/arrival_card_view"
        android:layout_alignStart="@+id/arrival_card_view" />

</RelativeLayout>