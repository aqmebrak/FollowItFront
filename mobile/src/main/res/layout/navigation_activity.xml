<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/instructions_textView"
        android:layout_weight="50"
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/ic_navigation_black_24dp"
        android:id="@+id/navigation"
        android:layout_weight="0.71" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/previous_button"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_background_color"  />

        <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/next_button"
            android:textColor="@color/navigationTextColor"
            android:background="@drawable/navigation_background_color"  />
    </LinearLayout>

</LinearLayout>